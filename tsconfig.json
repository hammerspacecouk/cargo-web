{
  "compilerOptions": {
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "module": "commonjs",
    "jsx": "react",
    "target": "ES2017"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [ "./types", "./node_modules/@types"]
}
